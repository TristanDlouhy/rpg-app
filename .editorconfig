# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
insert_final_newline = false
max_line_length = 0
max_line_length = off
trim_trailing_whitespace = false

[*.{json,md,xml,yml,yaml}]
indent_size = 2
indent_style = space
